<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="118dp"
        android:layout_height="99dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@mipmap/mascote"
        />

    <ImageView
        android:id="@+id/congratulation_text"
        android:layout_width="58dp"
        android:layout_height="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/parabens"
        android:layout_below="@id/icon"/>
    <ImageView
        android:layout_width="210dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/chegou_a_hora_de_fazer_a_diferen_a_com_apenas_um_click_voc_po"
        android:layout_below="@id/congratulation_text"/>
</RelativeLayout>
